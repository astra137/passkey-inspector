{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useNamingConvention": {
					"fix": "none",
					"level": "warn",
					"options": { "strictCase": false }
				},
				"noImplicitBoolean": "off",
				"useBlockStatements": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded"
		}
	}
}
